@model happylifeluxury.Models.IndexViewModel
<!-- Car Rentals Section Start -->
<section class="car-rentals-section-2 section-padding fix">
    <div class="container">
        <div class="row g-4">
            @if (Model.Cars!.Count() > 0)
            {
            @foreach (var item in Model.Cars!)
                    {
                <!-- Ekonomik Tür Arabalar -->
                  <div class="col-xl-4 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay=".3s">
                    <div class="car-rentals-items mt-0">
                        <div class="car-image">
                            <img src="~/uploads/images/cars/@item.CarImage" alt="@item.CarName @item.CarModel Model" alt="img">
                        </div>
                        <div class="car-content">
                            <div class="post-cat">
                                @item.CarModel Model
                            </div>
                            <div class="star">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <span>2 Reviews</span>
                            </div>
                            <h4><a href="/">@item.CarName</a></h4>
                            <h6>₺@item.CarPrice <span>/ Günlük</span></h6>
                            <div class="icon-items">
                                @{int count = 1;}
                                @foreach(var itemProp in Model.Carproperties!)
                                {
                                    if(itemProp.CarId == item.Id)
                                    {

                                       @(count == 1 ? Html.Raw("<ul class='mt-2'><li>" + Html.Raw(itemProp.Icon) + itemProp.Title + "</li>") : Html.Raw("<li>" + Html.Raw(itemProp.Icon) + itemProp.Title + "</li></ul>"))
                                       if(count == 2){
                                        count = 1;
                                       }else{
                                        count++;
                                       }
                                    }
                                }
                            </div>
                            <a href="/" class="theme-btn bg-color w-100 text-center">Hemen Kirala <i class="fa-solid fa-arrow-right ps-1"></i></a>
                        </div>
                    </div>
                </div>
                    }

            }

        </div>
    </div>
</section>