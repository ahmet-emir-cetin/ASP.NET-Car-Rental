@model happylifeluxury.Models.IndexViewModel
@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    ViewData["Title"] = "Car Rental";
}

<div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
    <div>
        <h3 class="fw-bold mb-3">Admin Settings</h3>
        <h6 class="op-7 mb-2">Car Rental</h6>
    </div>
    <div class="ms-md-auto py-2 py-md-0">
        <a href="#" class="btn btn-label-info btn-round me-2">Kaydet</a>
        <a href="#" class="btn btn-primary btn-round">Add Customer</a>
    </div>
</div>
@if (TempData["Success"]!=null)
{
    <div class="alert alert-success" role="alert">@TempData["success"]</div>
}
@if (TempData["Danger"]!=null)
{
    <div class="alert alert-danger" role="alert">@TempData["Danger"]</div>
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Site Ayarları</h4>
            </div>
            <form action="/admin/settings/site-update" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Title">Site Başlığı</label>
                            <input type="Title" class="form-control" maxlength="50" asp-for="Site!.Title" name="Title" id="Title" placeholder="Site Başlığı" value="@if (Model.Site!.Title!=null){@Model.Site!.Title}" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Description">Site Açıklaması</label>
                            <textarea maxlength="500" rows="5" type="Description" class="form-control" asp-for="Site!.Description" name="Description" id="Description" placeholder="Site Açıklaması" required>
                            @if (Model.Site!.Description!=null)
                            {
                                @Model.Site!.Description
                            }
                            </textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                        <img src="/uploads/images/@Model.Site.Logo" width="auto" height="150" alt="">
                        <input class="form-control" asp-for="Image" type="file" name="file" accept="image/png, image/gif, image/jpeg">
                        </div>
                    </div>
                    <input type="hidden" name="Id" asp-for="Site!.Id">
                    <div class="col-md-6 mt-5">
                        <button class="btn btn-primary w-100" id="update">GÜNCELLE</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
