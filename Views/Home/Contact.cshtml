@model happylifeluxury.Models.IndexViewModel;
@{
    ViewData["Title"] = "İletişim";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center fw-bold" role="alert">@TempData["success"]</div>
}
@if (TempData["Danger"] != null)
{
    <div class="alert alert-danger text-center fw-bold" role="alert">@TempData["danger"]</div>
}
        <!-- Contact Section Start -->
        <section class="contact-section-1 m-0 fix section-padding pb-0">
            <div class="container">
                <div class="contact-wrapper-area">
                    <div class="row g-4">
                        <div class="col-lg-9">
                            <div class="contact-content">
                                <div class="section-title">
                                    <img src="~/assets/img/sub-icon.png" alt="icon-img" class="wow fadeInUp">
                                    <span class="wow fadeInUp" data-wow-delay=".2s">iletişim</span>
                                    <h2 class="wow fadeInUp" data-wow-delay=".4s">
                                        Bize Ulaşın
                                    </h2>
                                </div>
                                <form action="/contact/add" id="contact-form" method="POST" class="contact-form-items mt-5 mt-md-0">
                                    @Html.AntiForgeryToken()
                                    <div class="row g-4">
                                        <div class="col-lg-6">
                                            <div class="form-clt">
                                                <input type="text" required name="Name" id="Name" placeholder="Adınız">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-clt">
                                                <input type="text" required name="Email" id="Email" placeholder="E-posta adresiniz">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-clt">
                                                <input type="text" required name="Title" id="Title" placeholder="Başlık">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-clt">
                                                <input type="text" required name="Phone" id="Phone" placeholder="Telefon Numaranız">
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-clt">
                                                <textarea name="Message" required id="Message" placeholder="Mesajınız"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <button type="submit" class="theme-btn">
                                                Gönder
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="contact-right-items">
                                <div class="contact-img">
                                    <img src="~/assets/img/contact.jpg" alt="img">
                                </div>
                                <div class="icon-items">
                                    <div class="icon">
                                        <img src="~/assets/img/question.png" alt="img">
                                    </div>
                                    <div class="content">
                                        <p>Have Question?</p>
                                        <h6><a href="@(Model.Site!.Phone!=null? "tel:+90"+ Model.Site!.Phone:" ")">+90 @String.Format("{0:(###) ###-####}", Convert.ToInt64(Model.Site!.Phone))</a></h6>
                                    </div>
                                </div>
                                <div class="icon-items">
                                    <div class="icon">
                                        <img src="~/assets/img/email.png" alt="img">
                                    </div>
                                    <div class="content">
                                        <p>Write Email</p>
                                        <h6><a href="mailto:@Model.Site!.Email" class="link" style="text-transform: lowercase;">@Model.Site!.Email</a></h6>
                                    </div>
                                </div>
                                <div class="icon-items">
                                    <div class="icon">
                                        <img src="~/assets/img/location.png" alt="img">
                                    </div>
                                    <div class="content">
                                        <p>Ofisimiz</p>
                                        <h6>
                                            @Model.Site.Address
                                        </h6>
                                    </div>
                                </div>
                                <div class="social-icon d-flex align-items-center">
                                    <a href="@Model.Site.Instagram"><i class="fa-brands fa-instagram"></i></a>
                                    <a href="@Model.Site.Facebook"><i class="fab fa-facebook-f"></i></a>
                                    <a href="@Model.Site.Twitter"><i class="fab fa-twitter"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!--<< Map Section Start >>-->
        <div class="map-section">
            <div class="map-items">
                <div class="googpemap">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d192697.88850536288!2d28.847372731098304!3d41.0054632429878!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caa7040068086b%3A0xe1ccfe98bc01b0d0!2zxLBzdGFuYnVs!5e0!3m2!1str!2str!4v1737710311950!5m2!1str!2str" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>